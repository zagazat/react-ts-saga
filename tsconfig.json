{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es2015", "es2016", "dom"],
        "outDir": "./build/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "jsx": "react",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "paths": {
            "common/*": [
                "./src/js/common/*"
            ],
            "core/*": [
                "./src/js/core/*"
            ]
        }
    },
    "include": [
        "./src/js/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
        "silent": true
    }
}